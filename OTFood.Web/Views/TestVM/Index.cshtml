@*
	you can create namelistViewModel on viewmodel folder
	@model OTFood.Web.ViewModels.NameListViewModel
*@

@model OTFood.Web.Controllers.TestVMController.NameListViewModel

@using (Html.BeginForm())
{
	@*view you can use an array of text boxes like this for dynamic textbox*@
	for (int i = 0; i < Model.InfoList.Count(); i++)
	{
		<div>
			<table>
				<tr>
					<td>
						@Html.TextBoxFor(x => x.InfoList[i].Id)
						@Html.HiddenFor(x => x.InfoList[i].Id)
					</td>
					<td>
						@Html.TextBoxFor(x => x.InfoList[i].FullName)
						@Html.HiddenFor(x => x.InfoList[i].FullName)
					</td>
					<td>
						@Html.TextBoxFor(x => x.InfoList[i].Course)
						@Html.HiddenFor(x => x.InfoList[i].Course)
					</td>
				</tr>
			</table>
			
		</div>
	}
	<input type="submit" />
}